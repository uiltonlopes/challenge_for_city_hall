<div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h1>Registrar</h1>
          <%= devise_error_messages! %>
          <div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
          </div>
          <div>
              <% if @minimum_password_length %>
                <em>(Minimo <%= @minimum_password_length %> caracteres)</em>
              <% end %>
            <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Senha" %>
          </div>
          <div>
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Senha" %>
          </div>
          <div>

              <button type="submit" class="btn btn-default submit">Registrar</button>
          </div>

          <div class="clearfix"></div>

          <div class="separator">
            <%= render "devise/shared/links" %>
            <div class="clearfix"></div>
            <br />
            <div>
              <h1> Gerenciador de Daily</h1>
            </div>
          </div>
        <% end %>
      </section>
    </div>
  </div>
</div>